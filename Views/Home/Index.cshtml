@using EFProject.Models
@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}
<table class="table">
    <thead>
        <tr>
			<th scope="col">Name</th>
			<th scope="col">Category</th>
			<th scope="col">Price</th>
            <th scope="col">Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>@item.Price</td>
                <td>
                    <a class="btn btn-info" asp-control="Home" asp-action="Edit" asp-route-id="@item.ProductId">UPDATE</a>
                    <a class="btn btn-danger" asp-control="Home" asp-action="Delete" asp-route-id="@item.ProductId">DELETE</a>
                </td>
            </tr>
        }
		
    </tbody>
</table>
<a class="btn btn-info" href="Home/Create">Create</a>